{
  "name": "ping-a-ding-a-ling",
  "version": "1.1.1",
  "description": "Real-time network latency monitor with sleek web UI - diagnose router and network issues",
  "keywords": [
    "ping",
    "latency",
    "network",
    "monitor",
    "jitter",
    "packet-loss",
    "icmp",
    "diagnostics"
  ],
  "author": "Juho Karenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkarenko/ping-a-ding-a-ling.git"
  },
  "bin": {
    "ping-a-ding-a-ling": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w @ping/backend",
    "dev:frontend": "npm run dev -w @ping/frontend",
    "build": "npm run build -w @ping/shared && npm run build -w @ping/backend && npm run build -w @ping/frontend",
    "build:backend": "npm run build -w @ping/backend",
    "build:frontend": "npm run build -w @ping/frontend",
    "build:package": "npm run build && npm run copy:dist",
    "copy:dist": "node scripts/copy-dist.js",
    "prepublishOnly": "npm run build:package"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/websocket": "^10.0.1",
    "better-sqlite3": "^11.3.0",
    "fastify": "^4.28.1",
    "pino-pretty": "^11.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
